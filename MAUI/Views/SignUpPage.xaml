<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Views.SignUpPage"
             Title="SignUp"
             >
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" />
    </Shell.BackButtonBehavior>
    
    <VerticalStackLayout Spacing="10" Padding="45,0" VerticalOptions="Center">
        <Entry Placeholder="Name" x:Name="entryName">

        </Entry>
        <Entry Placeholder="LastName" x:Name="entryLastName">

        </Entry>
        <Entry Placeholder="Number" x:Name="entryNumber">

        </Entry>
        <Entry Placeholder="UserName" x:Name="entryUserName">

        </Entry>
        <Entry Placeholder="Password" x:Name="entryPassword">

        </Entry>
        <Button Text="ثبت نام" x:Name="btn_SignUp" Clicked="btn_SignUp_Clicked"/>
    </VerticalStackLayout>
</ContentPage>